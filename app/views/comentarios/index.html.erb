<h1 size="6" align="center" class="titulo"><font color="#9B1C26">Lista de Comentarios<font></h1>

<table align="center" width="80%">

  <br>
  <br>
  <br>

  <tr>
    <th><font size="6" color="#9B1C26">Conteudo</font></th>
    <th><font size="6" color="#9B1C26">ID Coment&aacute;rio</font></th>
    <th colspan="3"><font color="#9B1C26" size="6">Controle de Comentários</font></th>
  </tr>

<% @comentarios.each do |comentario| %>
  <tr align="center">

    
    <td><font size="6" color="darkgrey"><%= comentario.conteudo %></font></td>
    <td><font size="6" color="darkgrey"><%= comentario.comentavel_id %></font></td>
    <td><font size="6" color="darkgrey"><%= comentario.comentavel_type %></font></td>
    <td><font size="6" color="darkgrey"><%= link_to 'Mostrar', comentario %></font></td>
    <td><font size="6" color="darkgrey"><%= link_to 'Editar', edit_comentario_path(comentario) %></font></td>
    <td><font size="6" color="darkgrey"><%= link_to 'Remover', comentario, method: :delete, data: { confirm: 'Você tem certeza?' } %></font></td>
  </tr>
<% end %>
</table>

